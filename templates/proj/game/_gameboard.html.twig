<div class="gameboard">
    {% for row in range(1, 5) %}
        <div class="row">
            {% for col in range(1, 5) %}
                {% set slot = row ~ col %}
                {% if game.board[slot] %}
                    <div class="slot {{ game.board[slot] }}">
                        {% if row == 5 %}
                            <span class="hand-score-col header-sm">{{ game.handScores["col" ~ col] }}</span>
                        {% endif %}
                    </div>
                {% else %}
                    <div class="slot empty-slot" data-slot-id="{{ slot }}">
                        {% if row == 5 %}
                            <span class="hand-score-col header-sm">{{ game.handScores["col" ~ col] }}</span>
                        {% endif %}
                    </div>
                {% endif %}


            {% endfor %}
            <span class="hand-score-row header-sm">{{ game.handScores["row" ~ row] }}</span>
        </div>
    {% endfor %}

    <form id="place_card_form" action="{{ path('proj_place_card') }}" method="post">
        <input id="card_slot_input" type="hidden" name="slot_id" value="0">
    </form>
</div>
