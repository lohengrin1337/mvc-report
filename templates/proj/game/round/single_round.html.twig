{% extends "base.html.twig" %}

{% block body %}
    <main class="main">
        <div class="sub-nav">
            {{ include('proj/_nav.html.twig') }}
        </div>

        <h1>{{ pageTitle }}</h1>

        <div class="gameview">
            {{ include('proj/game/_gameboard.html.twig') }}
            <div>
                <div class="header-m margin-b">Spelare: <a href="{{ path('proj_show_player', {id: game.round.player.id}) }}">{{ game.round.player.name }}</a></div>
                <div class="header-m margin-b">Summa: {{ game.round.score.total }} po√§ng</div>
                <div class="header-m margin-b">Starttid: {{ game.round.start|date("Y-m-d H:i", localTimeZone) }}</div>
                <div class="header-m margin-b">Sluttid: {{ game.round.finish|date("Y-m-d H:i", localTimeZone) }}</div>
                <div class="header-m margin-b">Tid: {{ game.round.duration|date("i:s") }}</div>

