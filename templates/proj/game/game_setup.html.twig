{% extends "base.html.twig" %}

{% block body %}
    <main class="main text-container">
        <div class="sub-nav">
            {{ include('proj/_nav.html.twig') }}
        </div>

        <h1>{{ pageTitle }}</h1>

        {{ include('flash.html.twig') }}

        {{ form(playerForm) }}

        {{ form(playerSelectForm) }}

        {% if players|length > 0 %}
            <p class="label-small">Valda spelare</p>
            <div class="players">
                {% for player in players %}
                    <p class="header-sm">{{ player.name }}</p>
                {% endfor %}
            </div>

            {{ form(playerDeselectBtn) }}

            {{ form(startBtn) }}
        {% endif %}

    </main>
{% endblock %}
