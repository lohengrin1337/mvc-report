{% extends "base.html.twig" %}

{% block body %}
    <main class="main text-container">
        <h1>{{ pageTitle }}</h1>

        {% if allCards %}
            <div class="cards">
                {% for card in allCards %}
                    <span class="card">{{ card }}</span>
                {% endfor %}
            </div>
        {% else %}
            <p>Kortleken är tom. Gå till <a href="{{ path('card_start') }}">start</a> för att skapa en ny.</p>
        {% endif %}
    </main>

    <div class="aside aside-top">
        {{ include('card/_nav.html.twig') }}
    </div>
{% endblock %}
